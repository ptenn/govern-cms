@model GovernCMS.ViewModels.LoginViewModel

@{
    ViewBag.Title = "LoginViewModel";
}
@if (TempData["successMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["successMessage"]
    </div>

}
@if (TempData["errorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["errorMessage"]
    </div>
}
<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-sm-9">
                <div class="card">
                    <div class="card-header">
                        <h1>LoginViewModel</h1>
                        <small>Form</small>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()                                                   
                                    <div class="form-group row">
                                        <label class="col-md-3 form-control-label" for="EmailAddr">Email Address</label>
                                        <div class="col-md-9">
                                            @Html.EditorFor(model => model.EmailAddr, new {htmlAttributes = new {@class = "form-control", autofocus = true}})
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="Passwd" class="col-md-3 control-label">Password</label>
                                        <div class="col-md-9">
                                            @Html.PasswordFor(model => model.Passwd, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Passwd, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="panel-footer">
                                        <button type="submit" class="btn btn-sm btn-primary"><span class="fa fa-dot-circle-o"></span> LoginViewModel</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>  
    </div>
</div>
<script type="text/javascript">
    $(function() {
        $("#EmailAddr").focus();
    });
</script>