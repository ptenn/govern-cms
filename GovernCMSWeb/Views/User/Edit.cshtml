@model GovernCMS.ViewModels.CreateUser

@{
    ViewBag.Title = "Edit User";
}
@if (TempData["successMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["successMessage"]
    </div>

}
@if (TempData["errorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["errorMessage"]
    </div>
}
<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-sm-9">
                <div class="card">
                    <div class="card-header">
                        <h1>Edit User</h1>
                        <small>Form</small>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                @using (Html.BeginForm("EditUser", "User"))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.HiddenFor(model => model.UserId)
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Email Address</label>
                                        <div class="col-md-6 col-sm-9">
                                            @Model.EmailAddr
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">
                                            <a class="btn btn-primary" role="button" style="background: grey; border: 0" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                                                <i class="fa fa-lock" style="color: #f4ce42" aria-hidden="true"></i>
                                            </a>
                                        </label>
                                        <div class="col-md-6 col-sm-9">
                                            <a data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                                                Click here to change your password
                                            </a>
                                        </div>
                                    </div>
                                    <div class="collapse" id="collapseExample">
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Password</label>
                                            <div class="col-md-6 col-sm-9">
                                                @Html.PasswordFor(model => model.Passwd, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Passwd, "", new { @class = "text-danger" })
                                                <span class="help-block">At least 8 characters, must include 1 Uppercase, 1 Lowercase, 1 number</span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Confirm Password</label>
                                            <div class="col-md-6 col-sm-9">
                                                @Html.PasswordFor(model => model.ConfirmPasswd, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.ConfirmPasswd, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">First Name</label>
                                        <div class="col-md-6 col-sm-9">
                                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Last Name</label>
                                        <div class="col-md-6 col-sm-9">
                                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="panel-footer">
                                        <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-dot-circle-o"></i> Update User</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function() {
        $("#DisplayName").focus();
    });
</script>