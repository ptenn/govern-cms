@model GovernCMS.ViewModels.ManageArtifact

@{string pageTitle = Model.ArtifactId.HasValue ? "Edit Artifact" : "Create Artifact"; }
@{string buttonLabel = Model.ArtifactId.HasValue ? "Update" : "Save"; }

@{
    ViewBag.Title = pageTitle;
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

@if (TempData["successMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["successMessage"]
    </div>

}
@if (TempData["errorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["errorMessage"]
    </div>
}
<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-sm-11">
                <div class="card">
                    <div class="card-header">
                        <h1>@pageTitle</h1>
                        <small>Form</small>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-group row">
                                        <label for="Name" class="col-md-3 form-control-label">Artifact Name</label>
                                        <div class="col-md-9">
                                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", autofocus = true } })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="Description" class="col-md-3 control-label">Description</label>
                                        <div class="col-md-9">
                                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows="8", cols="60" })                                            
                                        </div>
                                    </div>
                                    <div id="contentDisplay" class="form-group row">
                                        <label for="contentTable" class="control-label">Content of Artifact</label>
                                        <br/>
                                        <table id="contentTable" class="table table-striped table-bordered bootstrap-datatable datatable">
                                            <thead>
                                            <tr>
                                                <th>Version</th>                                                
                                                <th>Date</th>
                                                <th>Content</th>
                                                <th>Action</th>
                                            </tr>
                                            </thead>
                                            <tbody>

                                            @foreach (var content in Model.ContentItems)
                                            {
                                                <tr id="@content.ContentId">
                                                    <td>Version #@content.Version</td>
                                                    <td>@content.CreateDate.ToString("MM/dd/yyyy")</td>
                                                    <td>@co.Description</td>
                                                    
                                                    <td>
                                                        @if (artifact.UpdateDate.HasValue)
                                                        {
                                                            artifact.UpdateDate.Value.ToString("MM/dd/yyyy");
                                                        }
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-sm btn-success" href="@Url.Action("Manage", "Artifact", new {artifactId = artifact.ArtifactId})" role="button">Manage</a>
                                                        &nbsp;&nbsp;&nbsp;
                                                        <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Artifact", new {artifactId = artifact.ArtifactId})" role="button">Delete</a><span style="margin-left: 30px; margin-right: 30px"></span>

                                                    </td>
                                                </tr>
                                            }
                                        </table>


                                    </div>

                                    <div class="panel-footer">
                                        <button type="submit" class="btn btn-sm btn-primary"><span class="fa fa-dot-circle-o"></span> @buttonLabel</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#artifactTable").DataTable();
        $("#Name").focus();
    });
</script>
