@model GovernCMS.Models.Artifact
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

@{
    ViewBag.Title = "Artifact List";
}
@if (TempData["successMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["successMessage"]
    </div>

}
@if (TempData["errorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["errorMessage"]
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="panel-heading">
                    <h1>Artifacts</h1>
                </div>
                <div class="panel-body">
                    <table id="artifactTable" class="table table-striped table-bordered bootstrap-datatable datatable">
                        <thead>
                            <tr>
                                <th>Artifact Name</th>
                                <th>Description</th>
                                <th>Current Version</th>
                                <th>Create Date</th>
                                <th>Last Updated</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var company in Model.Companies)
                            {
                                <tr id="@company.CompanyId">
                                    <td><a href="@Url.Action("Index", "Nexus", new {company = company.Slug})">@company.CompanyName</a></td>
                                    <td><a href="@company.Url">Company Website</a></td>
                                    <td><input type="number" class="rating" readonly="readonly" min="0" max="5" step="0.5" size="lg" value="@company.Stars"></td>
                                    <td>
                                        <a class="btn btn-sm btn-success" href="@Url.Action("Review", "Company", new {companyId = company.CompanyId})" role="button">Review</a><span style="margin-left: 30px; margin-right: 30px"></span>
                                    </td>
                                </tr>
                            }
                    </table>
                </div>
            }
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#artifactTable").DataTable();
    });
</script>